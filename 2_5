#include <iostream>

using namespace std;

int main()
{
/*так как в условии задачи не сказано число N, но сказано, что N натуральное число больше 2,
то пользователь должен ввести число натуральное число N больше 2.*/
	int N;
	cin >> N;
//изменение координаты по у
	for (int i = 1; i <= N; i++) {
//изменение координаты по х
		for (int j = 1; j <= N; j++) {
//проверка, принадлежит ли координата к треугольнику, если принадлежит, печатается "*", если не принадлежит, печатается " "
			if (j >= N - i + 1) {
				cout << "*";
			}
			else {
				cout << (" ");
			}
		}
//переход на новую строку
		cout << endl;

	}
	return 0;
}
