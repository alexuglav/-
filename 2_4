#include <iostream>

using namespace std;

int main()
{
/*так как в условии задачи не задано число N, но сказано что оно нечетно, натурально и больше 3,
то пользователь должен ввести число N, которое будет нечетно, натурально и больше 3 */
	int N;
	cin >> N;
//изменение координаты по у
	for (int i = 1; i <= ((N + 1) / 2); i++) {
//изменение координаты по х
		for (int j = 0; j <= N; j++) {
//проверка, принадлежит ли координата к треугольнику, если принадлежит, печатается "*", если не принадлежит, печатается " "
			if ((j <= ((N - 1) / 2) + (i - 1)) && (j >= ((N - 1) / 2) - (i - 1))) {
				cout << "*";
			}
			else {
				cout << (" ");
			}
		}
//переход на новую строку
		cout << endl;

	}
	return 0;
}
